{
  "name": "tuplerone",
  "description": "A yet another tuple implementation",
  "keywords": [
    "tuple",
    "weakmap",
    "identity",
    "objects",
    "maps",
    "data structures",
    "immutability",
    "memoization",
    "hashing",
    "value objects"
  ],
  "exports": {
    ".": {
      "types": "./dist/tuplerone.d.ts",
      "require": "./dist/tuplerone.js",
      "import": "./dist/tuplerone.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "author": "slikts <dabas@untu.ms>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slikts/tuplerone.git"
  },
  "license": "MIT",
  "scripts": {
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "test": "jest",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "build": "nanobundle build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "watchPathIgnorePatterns": [
      "dist",
      "docs"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/babel__core": "^7.20.1",
    "@types/babel__preset-env": "^7.9.2",
    "@types/eslint": "^8.44.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "lodash.camelcase": "^4.3.0",
    "microbundle": "^0.15.1",
    "nanobundle": "^1.6.0",
    "pinst": "^3.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "typedoc": "^0.24.8",
    "typescript": "5.2.0-beta"
  },
  "bugs": "https://github.com/slikts/tuplerone/issues",
  "husky": {
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    }
  },
  "packageManager": "yarn@4.0.0-rc.48"
}
